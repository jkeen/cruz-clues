<figure class="clue">
  {{#if (eq mediaType 'video') }}
    {{video-player embed=clue.embed onPlay=(action (mut videoHasPlayed)) mediaWidth=mediaWidth mediaHeight=mediaHeight}}
  {{else}}
    <img src="{{clue.image.url}}" width="{{mediaWidth}}" height="{{mediaHeight}}">
  {{/if}}
  <figcaption>
    {{prismic-html clue.text}}
  </figcaption>
</figure>
