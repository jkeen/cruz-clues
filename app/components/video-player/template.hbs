<div class="video-player-content">
  {{ember-youtube
    class="video-player-embed"
    ytid=ytid
    playerVars=playerVars
    delegate=this
    delegate-as="ytPlayer"
    playing="ytPlaying"
    paused="ytPaused"
    ended="ytEnded"
    buffering="ytBuffering"
    width=mediaWidth
    height=mediaHeight
  }}

  {{#if (and isMobileDevice (and isReady (not playingUnmuted)))}}
    <button class="unmute-and-play-video" {{action 'triggerPlay'}}>Unmute Video</button>
  {{/if}}
</div>

{{yield (hash playVideo=(action 'triggerPlay'))}}
